{
  "name": "@fdmg/fd-typography",
  "version": "1.0.19",
  "description": "FD-themed typography",
  "types": "dist/typography.d.ts",
  "main": "dist/typography.js",
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:FDMediagroep/fd-ts-react-typography.git"
  },
  "scripts": {
    "build-demo": "npm run copy-demo-html && cross-env NODE_ENV=production webpack --mode=production --config webpack.demo.config.js",
    "build-dev": "webpack --mode=development",
    "build-prod": "cross-env NODE_ENV=production webpack --mode=production",
    "copy-demo-html": "cpx -p -v \"demo/**/*.html\" \"dist/\"",
    "lint": "tslint -p .",
    "release": "npm update && npm i && npm run test && npm run lint && npm run build-prod",
    "test": "jest",
    "tsc": "tsc -d",
    "updateSnapshot": "jest --updateSnapshot",
    "watch": "npm run build-prod -- --watch",
    "watch-demo": "npm run build-demo -- --watch"
  },
  "keywords": [
    "FD",
    "FDMG",
    "Typography",
    "TypeScript",
    "React"
  ],
  "author": "Willem Liu",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/react": "^16.7.22",
    "@types/react-dom": "^16.0.11",
    "@types/react-test-renderer": "^16.0.3",
    "@types/styled-components": "^4.1.6",
    "awesome-typescript-loader": "^5.2.1",
    "chokidar": "^2.0.4",
    "coveralls": "^3.0.2",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "har-validator": "^5.1.3",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "react-test-renderer": "^16.7.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.4",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  },
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "styled-components": "^4.1.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "test/(.*)(test|spec)\\.(jsx?|tsx?)$",
    "setupFiles": [],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "collectCoverage": true,
    "coverageDirectory": "dist/coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ]
  }
}
