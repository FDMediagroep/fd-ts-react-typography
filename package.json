{
    "name": "@fdmg/fd-typography",
    "version": "2.0.1",
    "description": "FD-themed typography",
    "types": "dist/typography.d.ts",
    "main": "dist/typography.js",
    "files": [
        "dist/"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:FDMediagroep/fd-ts-react-typography.git"
    },
    "scripts": {
        "build-demo": "npm run copy-demo-html && cross-env NODE_ENV=production webpack --mode=production --config webpack.demo.config.js",
        "build-dev": "webpack --mode=development",
        "build-prod": "cross-env NODE_ENV=production webpack --mode=production --display-modules",
        "copy-demo-html": "cpx -p -v \"demo/**/*.html\" \"dist/\"",
        "lint": "tslint -p .",
        "release": "npm update && npm i && npm run test && npm run lint && npm run build-prod",
        "test": "jest",
        "tsc": "tsc -d",
        "updateSnapshot": "jest --updateSnapshot",
        "watch": "npm run build-prod -- --watch",
        "watch-demo": "npm run build-demo -- --watch"
    },
    "keywords": [
        "FD",
        "FDMG",
        "Typography",
        "TypeScript",
        "React"
    ],
    "author": "Willem Liu",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "^24.0.15",
        "@types/react": "^16.9.0",
        "@types/react-dom": "^16.8.4",
        "@types/react-test-renderer": "^16.8.2",
        "@types/styled-components": "4.1.19",
        "@types/webpack-env": "^1.14.0",
        "awesome-typescript-loader": "^5.2.1",
        "chokidar": "^3.0.2",
        "coveralls": "^3.0.5",
        "cpx": "^1.5.0",
        "cross-env": "^5.2.0",
        "har-validator": "^5.1.3",
        "jest": "^24.8.0",
        "jest-cli": "^24.8.0",
        "react-test-renderer": "^16.8.6",
        "ts-jest": "^24.0.2",
        "tslint": "^5.18.0",
        "tslint-react": "^4.0.0",
        "typescript": "^3.5.3",
        "webpack": "^4.39.3",
        "webpack-cli": "^3.3.6"
    },
    "dependencies": {
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "styled-components": "^5.0.0-beta.6-ej4"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "test/(.*)(test|spec)\\.(jsx?|tsx?)$",
        "setupFiles": [],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "collectCoverage": true,
        "coverageDirectory": "dist/coverage",
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "text-summary"
        ]
    }
}
